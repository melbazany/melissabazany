---
import BaseLayout from '../layouts/BaseLayout.astro';
import SecondaryIntro from '../components/SecondaryIntro.astro';
import TextAndImage from '../components/TextAndImage.astro';

const title = "Home";
const introTitle = "Mel Bazany";
const introSubtitle = "Web Developer, Photographer";

const secondaryIntroHeading = "Utilizing cameras and code to capture memories and craft digital presences."
const secondaryIntroSubheading = "By weekday, I transform brand identities into online experiences. By weekend, I hold back tears behind my camera as you walk down the aisle."
const secondaryIntroBodyText = [
  "Who am I? An analytical mind who has experiences in crafting memories and websites. With a decade of experience in both web development and photography (weddings, engagements, families, seniors, and animals), I capture people as they desire– online or in-person. Let's get down to the nitty gritty of planning your big day, or we can talk about how to build your refined, authentic online presence."
];

const firstTextAndImageHeading = "Photography";
const firstTextAndImageBodyText = [
  "I’m ready to be your coordinator, bouquet-holder, and hype-man who will be busting some very uncomfortable moves on your reception's dance floor.",
  "I’m a Midwest photographer who revels in taking your photos while making you feel as extraordinary as you truly are, in all of your giggly, dimply glory.",
  "Let’s talk about your recent engagement, your upcoming wedding, your family photos... and, yes, you can absolutely bring your dog."
];
const firstTextAndImageCallToActionLinkText = "Inquire About Photography";
const firstTextAndImageCallToActionLinkIsExternal = false;
const firstTextAndImageCallToActionLinkUrl = "/contact";
const firstTextAndImageCallToActionLinkTextTwo = "View recent galleries";
const firstTextAndImageCallToActionLinkIsExternalTwo = true;
const firstTextAndImageCallToActionLinkUrlTwo = "https://mbeemedia.pic-time.com/portfolio";

const secondTextAndImageHeading = "Web Development";
const secondTextAndImageBodyText = [
  "In 2024, I joined Mighty as a Web Developer. I specialize in front-end development, and have enjoyed building sites for companies such as Altus, Inc. and Mill Steel Company, and contributing to client sites for Brunswick Bowling, MillerKnoll, Grand Canyon Conservancy, and the Grand Rapids Community Foundation.",
  "Learn more about my team by clicking the button below.",
];
const secondTextAndImageCallToActionLinkText = "Learn About Mighty";
const secondTextAndImageCallToActionLinkIsExternal = true;
const secondTextAndImageCallToActionLinkUrl = "https://www.mightyinthemidwest.com";

---
<BaseLayout title={title} introTitle={introTitle} introSubtitle={introSubtitle}>

  <SecondaryIntro
    secondaryIntroHeading={secondaryIntroHeading}
    secondaryIntroSubheading={secondaryIntroSubheading}
    secondaryIntroBodyText={secondaryIntroBodyText}
    isHomepage="true"
  />

  <TextAndImage
    imageOn="left"
    textAndImageHeading={firstTextAndImageHeading}
    textAndImageBodyText={firstTextAndImageBodyText}
    textAndImageCallToActionLinkText={firstTextAndImageCallToActionLinkText}
    textAndImageCallToActionLinkIsExternal={firstTextAndImageCallToActionLinkIsExternal}
    textAndImageCallToActionLinkUrl={firstTextAndImageCallToActionLinkUrl}
    textAndImageCallToActionLinkTextTwo={firstTextAndImageCallToActionLinkTextTwo}
    textAndImageCallToActionLinkIsExternalTwo={firstTextAndImageCallToActionLinkIsExternalTwo}
    textAndImageCallToActionLinkUrlTwo={firstTextAndImageCallToActionLinkUrlTwo}
    />

    <TextAndImage
    imageOn="right"
    textAndImageHeading={secondTextAndImageHeading}
    textAndImageBodyText={secondTextAndImageBodyText}
    textAndImageCallToActionLinkText={secondTextAndImageCallToActionLinkText}
    textAndImageCallToActionLinkIsExternal={secondTextAndImageCallToActionLinkIsExternal}
    textAndImageCallToActionLinkUrl={secondTextAndImageCallToActionLinkUrl}
  />

</BaseLayout>
